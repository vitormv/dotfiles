{
  /**
   * --------------------------------------------------------------------
   * EDITOR
   */
  "editor.accessibilitySupport": "off",
  "editor.autoClosingQuotes": "always",
  "editor.autoIndent": "full",
  "editor.bracketPairColorization.enabled": true,
  "editor.detectIndentation": false,
  "editor.fontFamily": "'Oxygen Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.maxColumn": 80,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.multiCursorModifier": "alt",
  "editor.renderControlCharacters": true,
  "editor.stickyScroll.enabled": true,
  "editor.suggestSelection": "first",
  "editor.rulers": [80, 100],
  "editor.tabSize": 2,

  /**
   * --------------------------------------------------------------------
   * WORKBENCH
   */
  "workbench.colorTheme": "Monokai Dimmed",
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.wrapTabs": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 18,

  /**
   * --------------------------------------------------------------------
   * GIT, GITHUB and COPILOT
   */
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableStatusBarSync": false,
  "git.openDiffOnClick": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "secret": false,
  },

  "github.copilot.chat.codeGeneration.instructions": [
    {
      "text": "In Javascript and Typescript: always use ESM for imports, always prefer named exports rather than default exports, always prefer arrow functions, always prefer Typescript types over interfaces, for node imports prefer 'node:' prefix when available"
    }
  ],

  /**
   * --------------------------------------------------------------------
   * GENERAL
   */
  "breadcrumbs.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "explorer.compactFolders": false,
  "files.associations": {
    "*.conf": "properties",
    ".env": "plaintext",
    ".env*": "plaintext"
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "search.exclude": {
    "vendor/**/*": true,
    ".yarn/": true,
    "**/node_modules": true
  },
  "telemetry.telemetryLevel": "error",
  "window.openFoldersInNewWindow": "on",

  /**
   * --------------------------------------------------------------------
   * LANGUAGE PREFERENCES
   */
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.useAliasesForRenames": true,
  "javascript.updateImportsOnFileMove.enabled": "never",

  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.useAliasesForRenames": true,
  "typescript.updateImportsOnFileMove.enabled": "never",

  /**
   * --------------------------------------------------------------------
   * TERMINAL
   */
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontFamily": "\"MesloLGM Nerd Font\"",
  "terminal.integrated.fontSize": 14,
  "terminal.explorerKind": "external",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.scrollback": 2000,
  "terminal.integrated.cursorStyle": "line",

  /**
   * --------------------------------------------------------------------
   * UI CUSTOMIZATIONS
   */
  "workbench.colorCustomizations": {
    "terminal.background": "#181818",
    "terminal.foreground": "#D8D8D8",
    "terminalCursor.background": "#D8D8D8",
    "terminalCursor.foreground": "#D8D8D8",
    "terminal.ansiBlack": "#181818",
    "terminal.ansiBlue": "#7CAFC2",
    "terminal.ansiBrightBlack": "#585858",
    "terminal.ansiBrightBlue": "#7CAFC2",
    "terminal.ansiBrightCyan": "#86C1B9",
    "terminal.ansiBrightGreen": "#A1B56C",
    "terminal.ansiBrightMagenta": "#BA8BAF",
    "terminal.ansiBrightRed": "#AB4642",
    "terminal.ansiBrightWhite": "#F8F8F8",
    "terminal.ansiBrightYellow": "#F7CA88",
    "terminal.ansiCyan": "#86C1B9",
    "terminal.ansiGreen": "#A1B56C",
    "terminal.ansiMagenta": "#BA8BAF",
    "terminal.ansiRed": "#AB4642",
    "terminal.ansiWhite": "#D8D8D8",
    "terminal.ansiYellow": "#F7CA88"
  },
  "editor.tokenColorCustomizations": {
    "[Monokai Dimmed]": {
      "textMateRules": [
        {
          "scope": "entity.name.type.class",
          "settings": {
            "foreground": "#E91E63"
          }
        },
        {
          "scope": "entity.name.type",
          "settings": {
            "foreground": "#D2B48C"
          }
        },
        {
          "scope": "entity.name.namespace",
          "settings": {
            "foreground": "#FB4934"
          }
        }
      ]
    }
  },

  /**
   * --------------------------------------------------------------------
   * Language-specific settings
   */
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordSeparators": "`~!@^&*()=+[{]}\\|;:'\",<>/?"
  },
  "[stylus]": {
    "editor.wordSeparators": "`~!@^&*()=+[{]}\\|;:'\",<>/?"
  },
  "[css]": {
    "editor.wordSeparators": "`~!@^&*()=+[{]}\\|;:'\",<>/?"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[properties]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false
  },

  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "history": false,
      "remote": false
    },
    "editorGroup": { "blame": true, "compare": false },
    "editorTab": {
      "clipboard": true,
      "compare": false,
      "history": false,
      "remote": true
    },
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scm": { "authors": true },
    "scmGroupInline": { "stash": true },
    "scmGroup": { "compare": true, "openClose": true, "stash": true },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": false,
      "stash": true
    }
  },
  "gitlens.modes": {
    "zen": {
      "name": "Zen",
      "statusBarItemName": "Zen",
      "description": "for a zen-like experience, disables many visual features",
      "codeLens": false,
      "currentLine": false,
      "hovers": false,
      "statusBar": false
    },
    "review": {
      "name": "Review",
      "statusBarItemName": "Reviewing",
      "description": "for reviewing code, enables many visual features",
      "codeLens": true,
      "currentLine": true,
      "hovers": true
    }
  },

  /**
   * --------------------------------------------------------------------
   * DEBUGGING
   */
  "launch": {
    "configurations": [
      {
        "type": "node",
        "name": "react-app-rewired-jest-test",
        "request": "launch",
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/react-app-rewired",
        "args": ["test", "--runInBand"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "vitest-debug-current-file",
        "autoAttachChildProcesses": true,
        "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
        "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
        "args": ["run", "${relativeFile}"],
        "smartStep": true,
        "console": "integratedTerminal"
      }
    ]
  },

  /**
   * --------------------------------------------------------------------
   * EXTENSIONS: General
   */
  "extensions.ignoreRecommendations": true,

  "dbt-formatter.upper": false,
  "eslint.format.enable": true,

  "githubPullRequests.terminalLinksHandler": "github",
  "githubPullRequests.pullBranch": "never",

  "gitlens.hovers.currentLine.over": "line",
  "gitlens.mode.active": "review",

  "local-history.path": "/tmp/vscode/localhistory",

  "material-icon-theme.folders.theme": "classic",
  "material-icon-theme.activeIconPack": "react",

  "prettier.requireConfig": true,
  "redhat.telemetry.enabled": false,
  "scm.showHistoryGraph": false,
  "svelte.enable-ts-plugin": true,

  /**
   * --------------------------------------------------------------------
   * EXTENSIONS: Todo Tree
   */
  "todo-tree.regex.subTagRegex": "^\\s*\\((.*)\\)",
  "todo-tree.filtering.ignoreGitSubmodules": true,
  "todo-tree.filtering.useBuiltInExcludes": "file and search excludes",
  "todo-tree.highlights.defaultHighlight": {
    "type": "tag-and-subTag"
  },
  "todo-tree.general.tags": ["@todo:", "@todo", "TODO:"],
  "todo-tree.general.tagGroups": {
    "TODO": ["@todo:", "@todo", "TODO:", "TODO"]
  },
  "todo-tree.highlights.customHighlight": {
    "vitor": {
      "background": "#c6eeff",
      "foreground": "#000000"
    }
  },
  "workbench.cloudChanges.autoResume": "off",
  "scm.diffDecorationsGutterWidth": 5,
  "githubIssues.queries": [
    {
      "label": "My Issues",
      "query": "is:open assignee:${user} repo:${owner}/${repository}",
      "groupBy": ["milestone"]
    },
    {
      "label": "Created Issues",
      "query": "author:${user} state:open repo:${owner}/${repository} sort:created-desc"
    }
  ],
  "githubPullRequests.experimental.notificationsView": true,
  "githubPullRequests.notifications": "pullRequests",
  "githubPullRequests.queries": [
    {
      "label": "Local Pull Request Branches",
      "query": "default"
    },
    {
      "label": "Waiting For My Review",
      "query": "repo:${owner}/${repository} is:open review-requested:${user}"
    },
    {
      "label": "Created By Me",
      "query": "repo:${owner}/${repository} is:open author:${user}"
    },
    {
      "label": "All Open",
      "query": "default"
    }
  ],
  "chat.agent.enabled": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": true
}
